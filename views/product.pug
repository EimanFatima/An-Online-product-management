br
br
table
	tr
		th Name
		th Description
		th Price
		th Category
		th(colspan='2') Action
	each document in documents
		tr
			td  #{document.Name}
			td  #{document.Description}
			td  #{document.Price}
			td  #{document.category}
			td  
				form(action='update' method='post')
					button(type="submit" style='background-color:green; color:white; width: 80px; height:40px') Update
			td
				form(action='delete' method='post')
					button(type="submit" style='background-color:green; color:white; width: 80px; height:40px') Delete